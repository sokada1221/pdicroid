<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.reliefoffice.pdic.PSWinActivity" tools:ignore="MergeRootFrame"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container_edit"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:textIsSelectable="true"
        android:id="@+id/editText"
        android:scrollbars="vertical"
         />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container_list"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="horizontal">

    <ListView android:id="@+id/popupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </ListView>
    </LinearLayout>

</LinearLayout>
